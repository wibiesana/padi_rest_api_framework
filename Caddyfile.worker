{
    # Global options
    admin off
    auto_https off
}

# HTTP server - Worker Mode
:8085 {
    # Root directory
    root * /app/public

    # Enable PHP with FrankenPHP worker mode for maximum performance
    php_server {
        worker /app/public/frankenphp-worker.php 10
    }

    # Enable file server for static assets
    file_server

    # Encode responses
    encode gzip

    # Logging
    log {
        output stdout
        format console
        level INFO
    }
}