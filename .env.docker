# Environment file for Docker production deployment
# Copy this to .env and adjust for your deployment

# IMPORTANT: Generate strong random secrets!
# Use: openssl rand -hex 32

# Application
APP_NAME="Padi REST API"
APP_ENV=production
APP_DEBUG=false
APP_VERSION=1.0.0
APP_URL=https://api.yourdomain.com

# Database
DB_HOST=host.docker.internal
DB_PORT=3306
DB_NAME=rest_api_db
DB_USER=root
DB_PASSWORD=your-strong-database-password-here

# JWT Secret (64 characters minimum)
JWT_SECRET=your-64-character-random-secret-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY=3600

# Cache - Redis (configured for Docker)
CACHE_DRIVER=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60
